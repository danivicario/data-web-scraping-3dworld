// https://travishorn.com/setting-up-prettier-on-vs-code-1fd5e5a43523
{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "plugin:prettier/recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi" : 2,
        "quotes": 0,
        "no-async-promise-executor": 0,
        "no-misleading-character-class": 0,
        "no-useless-catch": 0,
        "max-len": ["error", { "code": 90 }]
    }
}